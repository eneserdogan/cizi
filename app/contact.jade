include views/templates/helpers/_mixin
doctype
html(lang="en")
    include views/templates/partials/_head
    body
        // container
        .container
            // header
            include views/templates/partials/_header
            // content
            .content.main
                // main-area
                .main-area
                    // main
                    main.home
                        // content-header
                        header.content-header
                            h1.content-title Contact
                            span.dashed
                        // content-contact
                        section.content-contact
                          form(action="" method="POST")
                            // form-field
                            .form-field
                              label Full Name
                              input(type="text"  minlenght="3" required)
                            // form-field
                            .form-field
                              label Email
                              input(type="email" required)
                            // form-field
                            .form-field
                              label Message
                              textarea(name="name", rows="8", cols="40" minlenght="25"  required) 
                            // button
                            button(type="submit") SEND
                            // clear
                            .clear
                          // contact-result result__warning or result__success
                          .result.result__warning Please confirm the fields and submit it again.
                              

            // footer
            include views/templates/partials/_footer
